#include<iostream>
using namespace std;
int main()
{   int n;
    cin>>n;  
    //took n=2
    for(int i=0;i<n;i++) {
        for(int j=0;j<i;j++){
            cout<<" ";
        } 
        for(int j=0;j<1;j++){
            cout<<"*";
        }
        for(int j=0;j<2*n-2*i-1;j++){
            cout<<" ";
        }
        for(int j=0;j<1;j++){
            cout<<"*";
        }
        for(int j=0;j<i;j++){
            cout<<" ";
        }
        cout<<endl;
    } 
    for(int j=0;j<n;j++){
        cout<<" ";
    }
    cout<<"*";
    for(int j=0;j<n;j++){
        cout<<" ";
    }
    cout<<endl;
    for(int i=0;i<n;i++){
        for(int j=0;j<n-1-i;j++){
            cout<<" ";
        }
        for(int j=0;j<1;j++){
            cout<<"*";
        }
        for(int j=0;j<2*i+1;j++){
            cout<<" ";
        }
        for(int j=0;j<1;j++){
            cout<<"*";
        }
        for(int j=0;j<n-1-i;j++){
            cout<<" ";
        } 
        cout<<endl;
    }  
    return 0 ;
}
