#include<iostream>
using namespace std;
int main()
{    int n ;
    cin>>n;
    //taking n=5 as per the question 
    for(int i=1;i<=n;i++){
        for(int j=1;j<=i-1;j++){
            cout<<" ";
        }
        for(int j=1;j<=n-i+1;j++){
            cout<<"*" ;
        }
        cout<<endl;
    } 
    return 0 ;
}
